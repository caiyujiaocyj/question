
cyn1 = {
    "start": [0, 0, 0],
    "end":   [0, 0, 1],
    "radius": 0.05
}

cyn2 = {
    "start": [0, 0, 0.5],
    "end":   [1, 0, 0.5],
    "radius": 0.05
}

# 假设 pc 是 (N,3) 的 numpy 数组
# 比如随机：
# pc = np.random.rand(10000, 3)

# 设定 BBox 半边长，比如 0.1 (单位跟你的坐标一致)
idx, center = find_cylinder_connection_indices(cyn1, cyn2, pc, bbox_half_size=0.1)

print("连接中心：", center)
print("连接区域点云数量：", len(idx))
print("前几个索引：", idx[:10])